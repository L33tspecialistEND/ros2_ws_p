<launch>
    <!-- The turtlesim nodes -->
    <node pkg="turtlesim" exec="turtlesim_node" name="turtlesim_1" namespace="/turtle1">
        <param from="$(find-pkg-share my_robot_bringup)/config/turtle_controller_params.yaml"/>
    </node>
    <node pkg="turtlesim" exec="turtlesim_node" name="turtlesim_2" namespace="/turtle2">
        <param from="$(find-pkg-share my_robot_bringup)/config/turtle_controller_params.yaml"/>
    </node>

    <!-- The turtle controller nodes -->
     <node pkg="turtle_controller" exec="turtle_controller" name="turtle_controller_1">
        <remap from="/turtle1/cmd_vel" to="/turtle1/turtle1/cmd_vel"/>
        <remap from="/turtle1/pose" to="/turtle1/turtle1/pose"/>
        <remap from="/turtle1/set_pen" to="/turtle1/turtle1/set_pen"/>
        <remap from="/activate_turtle" to="/turtle1/activate_turtle"/>
     </node>

     <node pkg="turtle_controller" exec="turtle_controller" name="turtle_controller_2">
        <remap from="/turtle1/cmd_vel" to="/turtle2/turtle1/cmd_vel"/>
        <remap from="/turtle1/pose" to="/turtle2/turtle1/pose"/>
        <remap from="/turtle1/set_pen" to="/turtle2/turtle1/set_pen"/>
        <remap from="/activate_turtle" to="/turtle2/activate_turtle"/>
     </node>

</launch>